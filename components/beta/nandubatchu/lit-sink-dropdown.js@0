import {LitElement, html} from 'https://unpkg.com/lit-element/lit-element.js?module';

class DropdownElement extends LitElement {

    static get properties() {
        return {}
    }
  
    render() {
        return html`
            <style>
                #dropdown {}
				slot {
					height: 10px;
					width: 100%;
					background: red;
					font-weight: bolder
				}
            </style>
            
        	<div id="dropdown">
				<slot></slot>
			</div>
        `;
    }  
}

customElements.define('lit-sink-dropdown', DropdownElement);